<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmergencyPersonalMedicalRecordApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>

    <style name="headline">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">@font/oleo_script</item>
    </style>

    <style name="inputText" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:theme">@style/EditTextThemeOverlay</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>
</resources>